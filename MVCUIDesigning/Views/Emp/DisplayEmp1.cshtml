
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DisplayEmp1</title>
</head>
<body>
    <div>

        <table border="1" align="center">
            <caption> Employee Details </caption>
            <tr>
                <td>Employee Id:</td>
                <td>@ViewData["Id"]</td>
            </tr>
            <tr>
                <td>Employee Name:</td>
                <td>@ViewData["Name"]</td>
            </tr>
            <tr>
                <td>Employee Job:</td>
                <td>@ViewData["Job"]</td>
            </tr>
            <tr>
                <td>Employee Salary:</td>
                <td>@ViewData["Salary"]</td>
            </tr>
            <tr>
                <td colspan="2" align="center"><a href="/Emp/AddEmp">Add a new Employee</a></td>
            </tr>

        </table>


    </div>
</body>
</html>
